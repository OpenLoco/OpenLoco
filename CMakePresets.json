{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows",
            "displayName": "x86-64",
            "description": "Configure environment for Windows x86-64",
            "inherits": "windows-base",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": {
                    "type": "STRING",
                    "value": "x64-windows-static"
                }
            }
        },
        {
            "name": "windows-x86-32-ci",
            "displayName": "x86-32 CI",
            "description": "CI configure environment for Windows x86-32",
            "inherits": "windows-base",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "strategy": "set",
                "value": "Win32"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": {
                    "type": "STRING",
                    "value": "x86-windows-static"
                }
            },
            "toolset": {
                "value": "host=x86",
                "strategy": "external"
            }
        },
        {
            "name": "posix-base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "condition": {
                "type": "not",
                "condition": {
                    "type": "equals",
                    "lhs": "${hostSystemName}",
                    "rhs": "Windows"
                }
            },
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "posix",
            "displayName": "POSIX",
            "description": "Ninja configure environment for POSIX",
            "inherits": "posix-base"
        },
        {
            "name": "linux-x86-32-ci",
            "displayName": "Linux x86-32 CI",
            "description": "CI Ninja congfigure environment for Linux x86-32",
            "inherits": "posix-base",
            "toolchainFile": "${sourceDir}/cmake/linux_x86_toolchain.cmake",
            "vendor": { "microsoft.com/VisualStudioSettings/CMake/1.0": { "intelliSenseMode": "linux-gcc-x86" } },
            "cacheVariables": {
                "OPENLOCO_USE_CCACHE": {
                    "type": "BOOL",
                    "value": false
                },
                "PNG_LIBRARY": {
                    "type": "FILEPATH",
                    "value": "/usr/lib/i386-linux-gnu/libpng16.so"
                },
                "PNG_PNG_INCLUDE_DIR": {
                    "type": "PATH",
                    "value": "/usr/include"
                },
                "ZLIB_LIBRARY": {
                    "type": "FILEPATH",
                    "value": "/usr/lib/i386-linux-gnu/libz.so"
                }
            }
        },
        {
            "name": "mingw32",
            "displayName": "MinGW32-ci",
            "description": "Ninja configure environment for MinGW32",
            "inherits": "posix-base",
            "toolchainFile": "${sourceDir}/cmake/mingw32_toolchain.cmake",
            "cacheVariables": {
                "OPENLOCO_USE_CCACHE": {
                    "type": "BOOL",
                    "value": false
                },
                "OPENLOCO_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": false
                }
            }
        },
        {
            "name": "linux-vcpkg-static",
            "displayName": "Linux-vcpkg-static",
            "description": "Ninja configure environment for linux (static linkage)",
            "inherits": "posix-base",
            "vendor": { "microsoft.com/VisualStudioSettings/CMake/1.0": { "intelliSenseMode": "linux-gcc-x64" } },
            "cacheVariables": {
                "OPENLOCO_USE_VCPKG": {
                    "type": "BOOL",
                    "value": true
                },
                "VCPKG_TARGET_TRIPLET": {
                    "type": "STRING",
                    "value": "x64-linux"
                },
                "VCPKG_LIBRARY_LINKAGE": {
                    "type": "STRING",
                    "value": "static"
                },
                "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": {
                    "type": "STRING",
                    "value": "ONLY"
                },
                "CMAKE_FIND_ROOT_PATH_MODE_PACKAGE": {
                    "type": "STRING",
                    "value": "ONLY"
                }
            }
        },
        {
            "name": "macos-vcpkg-static",
            "displayName": "MacOS arm64 VCPKG static",
            "description": "Ninja configure environment for MacOS (static linkage)",
            "inherits": "posix-base",
            "cacheVariables": {
                "OPENLOCO_USE_VCPKG": {
                    "type": "BOOL",
                    "value": true
                },
                "VCPKG_TARGET_TRIPLET": {
                    "type": "STRING",
                    "value": "arm64-osx"
                },
                "VCPKG_LIBRARY_LINKAGE": {
                    "type": "STRING",
                    "value": "static"
                },
                "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": {
                    "type": "STRING",
                    "value": "ONLY"
                },
                "CMAKE_FIND_ROOT_PATH_MODE_PACKAGE": {
                    "type": "STRING",
                    "value": "ONLY"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-debug",
            "configurePreset": "windows",
            "displayName": "Debug",
            "description": "Build Debug MSVC Configuration",
            "configuration": "Debug"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows",
            "displayName": "Release",
            "description": "Build Release Configuration",
            "configuration": "Release"
        },
        {
            "name": "windows-x86-32-ci",
            "configurePreset": "windows-x86-32-ci",
            "displayName": "Release",
            "description": "Build Release x86-32 CI Configuration",
            "configuration": "Release"
        },
        {
            "name": "posix-debug",
            "configurePreset": "posix",
            "displayName": "Debug",
            "description": "Build Debug Configuration",
            "configuration": "Debug",
            "nativeToolOptions": [ "-k0" ]
        },
        {
            "name": "posix-release",
            "configurePreset": "posix",
            "displayName": "Release",
            "description": "Build Release Configuration",
            "configuration": "Release",
            "nativeToolOptions": [ "-k0" ]
        },
        {
            "name": "linux-x86-32-ci",
            "configurePreset": "linux-x86-32-ci",
            "displayName": "Release",
            "description": "Build Release Configuration",
            "configuration": "Release",
            "nativeToolOptions": [ "-k0" ]
        },
        {
            "name": "linux-vcpkg-static",
            "configurePreset": "linux-vcpkg-static",
            "displayName": "Release",
            "description": "Build Release Configuration (vcpkg static linkage)",
            "configuration": "Release",
            "nativeToolOptions": [ "-k0" ]
        },
        {
            "name": "macos-vcpkg-static",
            "configurePreset": "macos-vcpkg-static",
            "displayName": "Release",
            "description": "Build Release Configuration (vcpkg static linkage)",
            "configuration": "Release",
            "nativeToolOptions": [ "-k0" ]
        },
        {
            "name": "mingw32",
            "configurePreset": "mingw32",
            "displayName": "Release",
            "description": "Build Release Configuration",
            "configuration": "Release",
            "nativeToolOptions": [ "-k0" ]
        }
    ]
}
